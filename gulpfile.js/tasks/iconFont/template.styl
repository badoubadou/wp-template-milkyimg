// {{comment}}

@font-face
	font-family {{fontName}}
	src url("public/{{fontPath}}/{{fontName}}.eot")
	src url("public/{{fontPath}}/{{fontName}}.eot?#iefix") format('embedded-opentype'), url("public/{{fontPath}}/{{fontName}}.woff") format('woff'), url("public/{{fontPath}}/{{fontName}}.ttf") format('truetype'), url("public/{{fontPath}}/{{fontName}}.svg#{{fontName}}") format('svg')
	font-weight normal
	font-style normal


[class^="icon-"], [class*=" icon-"]
	&:before
		-moz-osx-font-smoothing: grayscale
		-webkit-font-smoothing: antialiased
		content: $content
		font-family: '{{fontName}}'
		font-style: normal
		font-variant: normal
		font-weight: normal
		line-height: 1
		speak: none
		text-transform: none

[class^="iconafter-"], [class*=" iconafter-"]
	&:after
		-moz-osx-font-smoothing: grayscale
		-webkit-font-smoothing: antialiased
		content: $content
		font-family: '{{fontName}}'
		font-style: normal
		font-variant: normal
		font-weight: normal
		line-height: 1
		speak: none
		text-transform: none


{% for icon in icons -%}
.icon-{{icon.name}}:before
  content: "\{{icon.code}}"
.iconafter-{{icon.name}}:after
  content: "\{{icon.code}}"
{% endfor %}
