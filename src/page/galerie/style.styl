.galerie
	#main
		> .blocks:nth-child(odd)
			position: relative
			color: #fff
			&:before
				position: absolute
				top: 0
				left:0
				width:100%
				height:100%
				content:''
				display:block
				background: #000
				transform: skewY(4deg)

			h2
				background:#fff
				color:#000

			.flex-direction-nav a:before
				color: $light-grey

			.flex-control-nav a
				background: $light-grey


		> .blocks:nth-child(even)
			.flex-direction-nav a:before
				color: $dark-grey


