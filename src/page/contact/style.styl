body.contact
	color:#FFF

	&:before
		content:''
		display:block
		width:100%
		height:100%
		top:0
		left:0
		position: absolute
		background: linear-gradient(to bottom right, #000000 , #6563A4)
		opacity:0.8



	input[type='text'],
	input[type='email'],
	textarea
		background:transparent
		border:none
		border-bottom: 1px solid $light-grey

