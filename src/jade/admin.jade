extends layout
block stylesheet
	link(rel='stylesheet', href='css/admin.css')
block additionalscript
	script(src='//tinymce.cachefly.net/4.2/tinymce.min.js')
block loginbar
	.loginbar
		button.green#savepage=d('save',$dico)
block backgroundimage
	.fullbg(style='background-image: url(/images/cover-emty.jpg)')
block listimgserver
	.server.hidden
		.shield
		.warp
			- ListFolder($pathimgfolder)
block btnadmintop
	.addblocks(data-insert-top=1)
		include ./includes/admin/addblocksbtn.jade
block handle
	.handle.icon-moveit
block bin
	.bin.icon-bin
block addslide
	include ./includes/admin/addslidebtn.jade
block btnadminbottom
	.addblocks(data-insert-top=0)
		include ./includes/admin/addblocksbtn.jade
block pagescript
	script(src='js/vendor/jquery.sortable.min.js')
	script(src='js/admin.js')

block samples
	section#samples
		.blocks.txt
			block handle
			block bin
			.warper
				.content
					.editable
						!=d('defaulttxt',$dico)
			block btnadminbottom
		.blocks.img
			block handle
			block bin
			block addslide
			.warper
				.content
					.flexslider
						ul.slides
							li
								img(src="http://placehold.it/350x150")
								div.flex-caption.editable!=d('caption',$dico)
			block btnadminbottom
		li#slide
			block handle
			img(src="http://placehold.it/350x150")
			div.flex-caption.needcleaning!=d('caption',$dico)

