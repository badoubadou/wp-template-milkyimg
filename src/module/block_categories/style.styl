.blocks.categories
	display:none
	ul
		display: inline-block
		margin: 0
		padding: 0

		li
			display: inline-block
			padding: 0
			margin-left: $space-1
			&:last-child
				margin-right:0

			&.current-menu-item
				background:$primary-color

			a
				color: $ft-color-primary
				text-transform: uppercase

.mainheader
	.blocks.categories
		display: none
		padding-left:0
		position: absolute
		top: 136px
		@media $bs-screen-md-max // smaller than devices (62em and down)
			.navigation-active &
				display: inline-block
		ul
			text-align:left
			padding: 0
			li
				background: $primary-color
				margin-left:0
				display:block
				padding:  ($space-1/6) ($space-1/3)

@media $bs-screen-ld-min // Large devices (desktops, 62em and up)
	.blocks.categories
		display:block
		ul
			text-align:right
			width: 100%
			li a
				font-size: 1.8em
	.mainheader
		.blocks.categories
			display:none