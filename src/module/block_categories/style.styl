.blocks.categories
	display none
	margin-bottom $space-1
	font-family $ft-family-secondary
	ul
		display inline-block
		margin 0
		padding 0

		li
			display inline-block
			padding 0
			margin 0 ($space-1/2)

			&.current-menu-item a
				color $ft-color-secondary

			a
				color $ft-color-primary
				text-transform uppercase
				&:hover
					color $ft-color-secondary

.mainheader
	.blocks.categories
		display none
		padding-left 0
		position absolute
		top 8.2em
		left 180px

		@media $bs-screen-ld-max // smaller than devices (62em and down)
			.navigation-active &
				display inline-block
		ul
			text-align left
			padding 0
			li
				background $primary-color
				margin-left 0
				display block
				padding  ($space-1/6) ($space-1/3)

@media $bs-screen-xld-min // Large devices (desktops, 62em and up)
	.blocks.categories
		background $primary-color
		display block
		ul
			text-align center
			width 100%
			li
				&:first-child
					margin-left 0
				&:last-child
					margin-right 0
				a
					font-size 1.59em
	.mainheader
		.blocks.categories
			display none