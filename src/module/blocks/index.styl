.blocks,
.blocks.txt,
.blocks.flexslider
	.date
		text-transform: uppercase
		font-family: hirlemann
		font-size:40px

	&.white
		.warper
			background:#fff

	&.red
		.warper
			background:#CA0209

	&.black
		.warper
			background:#000000
			color:#ffffff

			// .content
			// 	border:1px solid $grey
			// 	padding:20px !important
			// 	margin:20px !important
			.content
				margin:10px !important

	&.black,
	&.red,
	&.white
		.warper
			width:100%

		.addblocks .warper
		// .btnaddslide .warper,
			background:$bg-admin-color-primary


	&.fullscreen
		&.white,
		&.red,
		&.black
			.warper.level-0:not(.caption)
				.grid
					margin:0px !important

		.warper.level-0:not(.caption)
			max-width:none
			.content
				padding:0px

			.col-12
				.warper:not(.caption)
					max-width:none
					width:100%
					.content
						padding:0px

	position:relative
	.content
		padding:10px
		*:first-child
			margin-top:0