.perfect_image
	img
		display  block
		width  100%
		height  385px
		object-fit  cover

		@media $bs-screen-ld-min
			height 225px

	&.maxheight_500
		img
			height auto
			max-height 500px

	&.isie
		width  100%
		height  385px
		background-repeat no-repeat
		background-position center center
		background-size cover
		overflow hidden

		&.maxheight_500
			height 500px

		@media $bs-screen-ld-min
			height 225px
		img
			display none
