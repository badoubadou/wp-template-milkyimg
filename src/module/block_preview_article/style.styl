$height-block = 260px

.blocks.preview_article
	position  relative
	width 100%

	a
		display  block
		text-decoration  none
		color  $ft-color-primary
		height 0
		padding-bottom 100%
		background-size cover
		background-position 50% 50%

		header
			position absolute
			top 0
			left 0
			width 100%
			height 100%

			&:before
				content ''
				position absolute
				top 0
				left 0
				width 100%
				height 100%
				z-index 0
				opacity 0
				transition opacity 0.5s ease-out

		&:hover
			.title
				opacity 1
				margin-top 0
				color $ft-color-primary

			header:before
				opacity 0.5

		&.drawing
			header
				&:before
					background-color $color-drawing

		&.video
			header
				&:before
					background-color $color-video

		&.graphic-design
			header
				&:before
					background-color $color-graphic-design


	.title
		font-size 0.875em
		z-index 1
		position relative
		text-align center
		top 50%
		transform translateY(-50%)
		opacity 0
		color $ft-color-secondary
		text-transform uppercase
		margin-top 20px
		transition all 0.5s ease-out

