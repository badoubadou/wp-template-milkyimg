$height-block = 260px

.blocks.preview_article
	position  relative
	width 100%
	padding ($space-1 / 4)
	// .shop &

	.footer
		background-color #fff
		padding ($space-1 / 2)
		position relative
		text-align right
		// .price,
		// .addtocart
		// 	display inline-block

		.price
			left 0
			// padding ($space-1 / 2)


		.btn
			margin 0
			// width 50%
			text-align center
			max-width none

	a
		box-shadow 0px 0px 5px #888888
		display  block
		text-decoration  none
		color  $ft-color-primary
		height 0
		padding-bottom 100%
		background-size cover
		background-position 50% 50%
		position relative

		header
			position absolute
			top $space-1 / 2
			left $space-1 / 2
			width 100%
			height 100%

			&:before
				content ''
				position absolute
				top 0
				left 0
				width 100%
				height 100%
				z-index 0
				opacity 0
				transition opacity 0.5s ease-out

		&:hover
			.title
				opacity 1
				margin-top 0
				color $ft-color-primary

			header:before
				opacity 0.5

		&.sketches
			header
				&:before
					background-color $color-sketches

		&.illustration
			header
				&:before
					background-color $color-illustration

		&.comics
			header
				&:before
					background-color $color-comics

		&.screenprints
			header
				&:before
					background-color $color-screenprints


	.title
		font-size 0.875em
		z-index 1
		position relative
		text-align center
		top 50%
		transform translateY(-50%)
		opacity 0
		color $ft-color-secondary
		text-transform uppercase
		margin-top 20px
		transition all 0.5s ease-out

