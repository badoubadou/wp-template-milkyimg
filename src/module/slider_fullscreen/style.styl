body:not(.admin)
	.blocks.img.fullscreen
		margin-top: 0

		img
			height:auto
			left:0
			min-height: 100%
			min-width: 100%
			position: absolute
			top:0
			width: auto
			z-index: -100

			.csstransforms &
				left:50%
				top:50%
				transform: translateX(-50%) translateY(-50%)

		.content
			padding:0

		.warper:not(.caption)
			max-width:100%

		.flexslider
			border: none
			height: 100vh

		.flex-control-nav
			bottom: 50px

		.flex-control-paging li a
			background: #fff

		.slides li
			overflow: hidden
			position: relative

		.flex-caption
			position:absolute
			bottom: 80px
			margin: 20px

			p, h3
				margin:0
				padding: 0
				span
					background:#000
					color: #fff
					padding: 3px 6px