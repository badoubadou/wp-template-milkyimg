$pad = 20px

.grid
	background: white
	margin: 0

	&:after
		/* Or @extend clearfix */
		content: ""
		display: table
		clear: both

	*
		@include box-sizing(border-box)

	.repeater
		display: flex
		flex-wrap: wrap


	[class*='col-']
		float: left
		display: flex
		// padding-right: $pad
		.content
			// padding:0

		.grid &:last-of-type
			padding-right: 0

	.col-8
		width: 66.66%

	.col-4
		width: 33.33%

	.col-6
		width: 50%

	.col-3
		width: 25%

	.col-2-4
		width: 20%

	.col-2
		width: 16.6%

	.col-1-7
		width: 14%

	.col-1-5
		width: 8%


/* Opt-in outside padding */
.grid-pad
	padding: $pad 0 $pad $pad
	[class*='col-']:last-of-type
		padding-right: $pad

