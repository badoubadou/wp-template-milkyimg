$flexiheight = 328px
$flexifullheight = 100vh
.flexslider.myslider
	margin-bottom ($space-1 * 2)
	border-radius 0
	border 0
	&.slider-full-height
		top 0
		left 0
		position fixed
		height 100%
		width 100%
		
	.flex-viewport
		height  0
		background  #000
		transition all 1s ease
		.slider-full-height.slider-ready &
			height  100%	
			
		.slider-ready &
			height  $flexiheight
		
	.slides
		height 100%

		> li
			background-repeat no-repeat
			background-position 50%
			background-size cover
			height  $flexiheight
			position relative
			text-align center
			.slider-full-height &
				height  $flexifullheight	
			
			&:before
				content ''
				position relative
				height calc( 100% - 180px )
				width 100%
				display block

		img
			height  auto
			visibility  hidden
			display none
		
		.see_project
			bottom 80px
			// left 50%
			// transform translateX(-50%)
			

		.videoWrapper
			top 60px

.flexslider .flex-direction-nav a
	top 170px
	height 45px
	&:before
		color #FFF
	

	.slider-full-height.slider-ready &
		display none

.flex-control-thumbs.flex-control-nav
	margin-top 20px
	li
		width 75px
		height 75px
		overflow hidden
		text-align center
		position relative

		&.video span
			height 100%
			width 100%
			display block
			cursor pointer

			&:before
				content ''
				position absolute
				top 0
				left 0
				width 100%
				height 100%
				background-image url('svg/video.svg')
				background-size 90%
				background-position 50% 50%
				background-repeat no-repeat
				z-index 2
				opacity 0.6

			img
				margin-left -33px

		img
			height 100%
			width auto
			min-width 75px