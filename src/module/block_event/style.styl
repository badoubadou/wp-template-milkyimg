.blocks.event
	padding-bottom  $space-1
	text-align  center
	position relative
	.title_event,
	.title,
	.date,
	.place,
	.link
		visibility hidden
		.wf-active &
			visibility visible

	&:after,
	&:before
		content ''
		display block
		background linear-gradient(to top, #000000 0%, #000000 25%, #ffffff 25%, #ffffff 85%, #ffffff 85%, #000000 85%)
		top 0
		left 0
		width 100%
		height ($space-1 / 2)

	&:after
		top auto
		bottom 0
		position absolute

	.title_event
		line-height ($space-1 * 2)
		border-bottom 1px solid $grey
		margin 0

	a
		text-decoration  none
		color $ft-color-primary
		display  inline-block
		width 100%

		&:hover
			color $primary-color

	ul
		margin 0
		padding 0
		list-style none
		li
			border-bottom 1px $grey solid
			&:last-child
				border-bottom none

			section
				padding ($space-1 / 3) 0
	.title
		font-family  $ft-family-primary-cond
		font-size 1.9em
		text-transform  uppercase
		font-weight  700
		line-height 0.8

	.date
		font-size  1.5em

	.place,
	.link
		font-size  1em

	@media $bs-screen-md-min
		ul li
			width 50%
			&:last-child
				border-bottom 1px solid $grey
			&:nth-child(odd)
				float right

	@media $bs-screen-xld-min
		height height_block + $space-1

		ul li
			width 100%
			&:nth-child(odd)
				float none