ul.social
	margin 0
	padding $space-1 0
	li
		display inline-block
		padding ($space-1/6)  ($space-1/2)
		margin-right ($space-1/3)

		&.mail
			background #000

		&.fb
			background #3B5998

		&.twitter
			background #4099FF
		a
			color #fff
			&:hover
				text-decoration none
			&:before
				font-size 20px
				vertical-align middle
			span
				display block
				text-indent 100%
				white-space nowrap
				overflow hidden
