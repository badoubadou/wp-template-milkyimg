ul.social
	margin 0
	padding 0
	display inline-block
	li
		display inline-block
		padding ($space-1/6)  ($space-1/2)
		margin-right ($space-1/3)
		
		&:first-child
			padding-left 0

		&.mail
			background #000

		&.fb
			background #3B5998

		&.twitter
			background #4099FF
		a
			// color #fff
			&:hover
				text-decoration none
			&:before
				font-size 20px
				vertical-align middle
			span
				display none