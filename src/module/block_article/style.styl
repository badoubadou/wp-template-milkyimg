article.two_col
	color $ft-color-secondary
	text-align left

	.videoWrapper
		padding-bottom 56.25%
		height 0
		position relative
		padding-top 25px

		iframe
			position absolute
			top 0
			left 0
			width 100%
			height 100%


	.border
		// border-top 5px solid #000
		// border-bottom 5px solid #000
		&:before,
		&:after
			content ''
			height 5px
			background #000
			width 100%
			display block
		padding-top ($space-1 * 2/3)
		padding-bottom ($space-1 * 2/3)


	.title
		text-transform uppercase
		font-size 1.5em
		font-weight 700

	.subtitle
		a
			color $ft-color-secondary
			text-decoration underline
			&:hover
				color $ft-color-tertiary


	.descrition
		color $ft-color-tertiary
		a
			text-decoration underline
			color $ft-color-tertiary
			&:hover
				color $ft-color-secondary


	.grid [class*='col-']
		padding-top ($space-1 / 2)
		padding-bottom ($space-1 / 2)

	.tags
		border-top 1px $ft-color-tertiary solid
		h4
			text-transform uppercase
			font-weight 700
			margin-top ($space-1 / 3)
			margin-bottom ($space-1 / 3)
		a
			color $ft-color-secondary
			&:hover
				color $ft-color-tertiary


	@media $bs-screen-xld-min // Large devices (desktops, 62em and up)
		.pusher
			height 280px
		.stuck
			position fixed
			top 0
			width 25%
			padding-right $space-1 * 2

			&.fixed-at-bottom
				position absolute
				top auto
				bottom $space-1
				padding-right 0
