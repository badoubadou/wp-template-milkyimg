body.popin_opended
	overflow: hidden

.blocks.mypopin
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	display none
	z-index 9999

	.popin_opended &
		display block

	.shield
		content ''
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background #000
		opacity 0.6

	.content
		position absolute
		width 90%
		max-width $break-larg
		margin auto
		top 50%
		left 50%
		transform translate(-50%,-50%)
		background: #fff
		padding $space-1
		box-shadow: 0px 0px 10px $dark-grey
