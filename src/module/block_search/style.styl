.icon-search
	display:inline-block
	position: relative
	height:$space-1
	width:$space-1
	&:before
		top:0
		left:0
		position:absolute

.openedsearch
	margin-left ($space-1/2)
	padding-top ($space-1/2)

.blocks.search
	.cont_search
		overflow: hidden
		display: inline-block
		position: relative
		height:30px

	input
		width: 0px
		display: none
		transition: width 1s
		display:inline-block
		.openedsearch &
			width 130px

	#showsearch
		display:inline-block

		&:checked,
		.openedsearch &
			~ #labelshow
				display:none
			~ .cont_search
				input
					width: 130px
					display: inline-block
				button.icon-search
					display:inline-block

	button.icon-search:before,
	#labelshow:before
		font-size 30px

	label
		cursor pointer
		position:relative
		display: inline-block



	button[type=submit]
		background:transparent
		border:0 none
		cursor:pointer
		padding: 0 ($space-1/2)

	#s,
	#mobilesearch
		border:0 none
		border-bottom:1px solid $grey
		vertical-align:top
		font-size:18px
		font-family: $ft-family-secondary
		font-style:italic
		background: transparent
		position: relative
		outline none
		padding-bottom 2px
		margin-right 5px

	#mobilesearch
		color #fff

	button.icon-search
		display:none
		.openedsearch &
			display inline-block
			color:$grey
			&:before
				top auto
				bottom 2px
				font-size 24px

	input[type=checkbox]
		opacity: 0

