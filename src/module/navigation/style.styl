// --------------------------//
// blocks/navigation
// --------------------------//
$pad = 20px
.main-header
  height: auto

.blocks.navigation
  background: $bg-color-tertiary
  height: auto
  position: relative
  width: 100%
  z-index: 999

  .admin &
    top:$login-height

  .navigation-header
    background: $bg-color-tertiary
    position: relative
    text-align: center
    z-index: 1

  .nav-group
    min-height: $navigation-height
    margin:0
    padding:0

    > li
      display: inline-block
      position: relative
      &:first-child
        margin-left:0

  a
    color: $ft-color-tertiary
    display: block
    font-family: hirlemann
    font-size:50px
    padding: 0 15px
    text-decoration: none
    text-decoration: none
    text-transform: uppercase
    white-space: nowrap

  .changlang
    float:right
    z-index:100
    position:relative

  li.active > a,
  li:hover > a
    // background-color: lighten($bg-color-secondary, 15%)

  .contimg
    overflow: hidden
    width:200px
    height:200px

  // --------------------------//
  // subnavigation
  // --------------------------//

  .nav-group .nav-group
    background: $bg-color-tertiary
    display: none
    min-width: 150px
    position: absolute
    top: 100%

    li
      float: none

    a
      display: block

  .nav-group li:hover .nav-group
    display: block
