.mainheader
	h1
		position: absolute
		width:200px
		left: 90px
		margin: 0
		padding:14px 10px 10px 10px
		background:#FFFFFF

		img
			width:100%
			height:auto

	@media $bs-screen-xsd-max
		h1
			width:160px
			padding:20px 10px 10px 10px

	@media $bs-screen-ld-min // Large devices (desktops, 62em and up)
		h1
			left:0
			width:auto
			position: relative
			display: inline-block
			padding:0