.link-cart
	position absolute
	right ($space-1 / 2)
	z-index 1000000
	span
		display inline-block
		text-transform uppercase
		vertical-align middle

	.icon-cart
		color #fff
		font-size 2em
		&:hover
			text-decoration none

		&:after
			position absolute
			right -15px
			top 5px
			content attr(data-nb-article)
			background $primary-color
			border-radius 50%
			font-weight 700
			font-size 0.5em
			width 20px
			height 20px
			line-height 20px
			display block
			text-align center
			color #000