doctype html
html.no-js
	include ./includes/head.jade
	block additionalscript
	body(data-pagejson!="<?php echo $pagetoload.$lang; ?>" class!="<?php if($admin){echo 'admin';};?>")
		block backgroundimage
		block loginbar
		block listimgserver
		include ../../module/navigation/index.php.jade
		section#main
			block btnadmintop
			- foreach ($pagejson as $keymodule => $module):
				div(class!="<?php echo d('classes',$module); ?>", id!="<?php echo $keymodule; ?>" )
					block handle
					- $itsimgtype = (strpos(d('classes',$module),'img') !== false)
					- if($itsimgtype):
					- $infullscreen = (strpos(d('classes',$module),'fullscreen') !== false);
					block addslide
					- endif;
					.warper
						block listbtnright
						.content
							- if($itsimgtype):
							include ../../module/slider_fullscreen/index.php.jade
							- else:
							.editable
								!=d('content',$module)
							- endif;
					block bin
					block btnadminbottom
			- endforeach
		block samples
		include ./includes/footer.jade