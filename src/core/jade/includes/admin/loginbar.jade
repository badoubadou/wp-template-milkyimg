.loginbar
	- if($logged):
	button.green#savepage(tabindex='-1')
		!=d('save',$dico)
	a
		!=d('welcome',$dico).' '.$user_name.' ! '
	button.blue#unlog(tabindex='-1')
		!=d('unlog',$dico)
	- else:
	form(method='post')
		input(type='text', name='login', value='', placeholder!='<?php echo d(\'name\',$dico);?>' tabindex='-1')
		input(type='password', name='password', value='', placeholder!='<?php echo d(\'password\',$dico);?>' tabindex='-1')
		input.blue(type='submit', name='commit',value!='<?php echo d(\'log\',$dico);?>')
	- endif;
