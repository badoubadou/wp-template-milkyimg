extends layout
block stylesheet
	link(rel='stylesheet', href='css/admin.css')
block additionalscript
	script(src='//tinymce.cachefly.net/4.2/tinymce.min.js')
block loginbar
	include ./includes/admin/loginbar.jade

block backgroundimage
	.fullbg(style='background-image: url(/images/cover-emty.jpg)')

block listimgserver
	.server.hidden
		.shield
		.warp
			- ListFolder($pathimgfolder)

block btnadmintop
	include ./includes/admin/addblocksbtn.jade

block pagescript
	script(src='js/vendor/jquery.sortable.min.js')
	script(src='js/admin.js')

block samples
	section#samples
		- $data['sample'] = true;
		- $data['type'] = 'txt';
		- $data['blockclass'] = 'txt';
		include ../../module/blocks/index.php.jade
		- $data['img'] = 'http://placehold.it/350x150'
		- $data['type'] = 'img';
		- $data['blockclass'] = 'img';
		include ../../module/blocks/index.php.jade
		- $data['level'] = '0';
		- $data['type'] = 'repeater';
		- $data['blockclass'] = 'repeater';
		- $data['contentclass'] .= 'grid';
		include ../../module/blocks/index.php.jade

		div#slide
			include ../../module/slider_fullscreen/slide.jade


