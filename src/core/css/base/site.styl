html
	font-size 100%
	position relative
	min-height 100%

body
	color $ft-color-secondary
	font-family $ft-family-primary
	font-size 16px
	margin 0 0 height_footer
	background-image url('images/textured_paper.png')

	&.admin-bar
		padding-top 32px

	@media $bs-screen-sd-max
		&.admin-bar
			padding-top 46px

	a
		color:$ft-color-primary
		text-decoration:none
		transition color
		transition-duration 0.4s

		&:hover
			color: $ft-color-tertiary

p
	word-wrap break-word
	&:empty
		display none

.blocks
	h2
		font-size:5.000em
		text-transform:uppercase
		margin: 1%
		color:#fff
		background: #000
		margin:0
		display: inline-block
		padding: 0 10px
		// line-height: 4.563em

	h3
		font-size:2.500em
		text-transform:uppercase
		margin: 1%
		// line-height: 2.688em

	h4
		font-size:1.875em
		text-transform:uppercase
		margin: 1%
		// line-height: 2.063em

	h6
		font-weight normal
		padding 0
		margin 0




#main,
.mainheader
	// max-width:67em
	// margin: auto
	padding-left:($space-1/2)
	padding-right:($space-1/2)

	@media $bs-screen-xld-min
		max-width none


.mainheader,
.categories
	a:hover
		text-decoration none

.my_container
	max-width $break-xlarg
	margin auto
	padding-left 15px
	padding-right 15px

	&.no-pad
		padding-left 0
		padding-right 0

	@media $bs-screen-xld-min
		padding-left 0px
		padding-right 0px
		.smaller
			margin 0 160px
			transition all 1s
			.slider-ready &
				margin 0

#main
	padding-top (navigation-height + $space-1 )
	// padding-top 120px

#main
	position relative

&.full,
&.one_third,
&.two_third
	padding-bottom: $space-1

article
	img
		width:100%
		height:auto

	ul.listimg
		list-style-type: none
		padding: 0

		li
			padding-bottom: $space-1


footer
	width 100%
	clear both
	text-align left
	height auto
	position absolute
	bottom 0
	font-size 0.8em
	color #000
	
	&:before
		content ''
		width 100%
		height 100%
		left 0
		top 0
		display block
		background #000
		opacity .6
		position absolute
		z-index 0

	.mention
		color $bg-color-tertiary
		padding ($space-1 / 3)

	.my_container
		border-top 5px solid #000
		padding ($space-1 / 3)
		z-index 1
		position relative

	a
		color $bg-color-tertiary
		&:hover
			color $bg-color-tertiary

	.tags
		ul
			padding 0
			list-style none
			column-count 5
			column-gap 5px

// .two_third li
// 	list-style: none

.container-fluid
	margin-top:0
	margin-right:$space-1

.contbtn
	text-align center
	padding ($space-1 * 2)

.btn
	background $primary-color
	padding ($space-1 / 2)
	color #000
	margin-right ($space-1 / 2)
	margin-bottom ($space-1 / 2)
	transition background
	transition-duration 0.4s
	text-transform uppercase
	width 100%
	max-width 300px
	display inline-block
	cursor pointer
	text-align center
	&:after
		vertical-align middle
		padding-left ($space-1 / 2)
	&:hover
		text-decoration none
		background $bg-color-secondary-dark
		color $ft-color-secondary
	&.more
		margin 0
		max-width none
		text-align center
		margin-bottom $space-1

	&.invert
		border $primary-color 1px solid
		background transparent
		color $primary-color
	
	&.light_bg
		background rgba(255, 255, 255, .5)
	&.dark_bg
		background rgba(0, 0, 0, .5)

.full_min_height
	min-height 100%

.search_result
	padding-bottom ($space-1 * 2)

.centeredtxt
	text-align center

hr.largedevice
	display none
hr.smalldevice
	margin-top 0

@media $bs-screen-md-min
	.post-type-archive-bieres #main
		padding-top $space-1

@media $bs-screen-xld-min
	hr.largedevice
		display block
	hr.smalldevice
		display none

	.demi_marg_top
		margin-top ($space-1 / 2)
	#main
	// .mainheader
		// max-width:67em
		margin auto
		padding-top 120px

	#main,
	.mainheader,
	.categories
		padding-left:0
		padding-right:0

	#main,
	.blocks.filter
		padding-top:0
		.post-type-archive-bieres &
			padding-top 0

	.two_col
		position relative

	.too_top_right
		position absolute
		top 0
		right 0
		width 33.33%
		padding-left ($space-1 / 2)

	.too_top_left
		position absolute
		top 0
		left 0
		width 33.33%

		&.fullwidth
			width 100%


	.two_third,
	.one_third,
	.three_third
		display inline-block
		vertical-align top

	.one_third
		width 25%
		&.too_top_right
			width 33.33%
	.two_third
		width 75%
		padding-left ($space-1 * 2)


	.three_third
		width 100%




