#main
	padding-top:$navigation-height

.blocks
	h2
		font-size:80px
		line-height: 70px
		font-family : hirlemann
		text-transform:uppercase
		margin: 1%
		color:#fff
		background: #000
		margin:0
		display: inline-block
		padding: 0 10px
		line-height: 73px

	h3
		font-size:40px
		font-family: maloz
		text-transform:uppercase
		margin: 1%
		line-height: 43px

	h4
		font-size:30px
		font-family: hirlemann
		text-transform:uppercase
		margin: 1%
		line-height: 33px

.romhand
	font-family maloz
	font-size:220%
	text-transform:uppercase
	line-height: 0.9

.stephhand
	font-family hirlemann
	font-size:220%
	text-transform:uppercase
	line-height: 0.9

body
	background-image:url('../images/handmadepaper.png')
	color: $ft-color-primary
	font-family: $ft-family-primary

	a
		color:$ft-color-primary
		&:hover
			color: $ft-color-secondary

	#main
		a:not(.flex-prev):not(.flex-next)
			color:$ft-color-primary
			background:$dark-grey
			color:$light-grey
			padding:3px
			text-decoration: none
			&:hover
				text-decoration: underline
				color: #fff

