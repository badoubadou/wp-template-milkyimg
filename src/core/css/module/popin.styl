.popin
	position: fixed
	top:0
	left:0
	width:100%
	height:100%
	z-index:1000
	&:before
		content:' '
		position: absolute
		top:0
		left:0
		width:100%
		height:100%
		background: #000
		opacity: 0.6

	.content
		position: absolute
		border: 5px solid #fff
		background: #999
		// height: 40%
		width: 60%
		text-align: center
		left:50%
		top:50%
		transform: translate(-50%, -50%)

		input
			padding: 10px
			margin: 20px



