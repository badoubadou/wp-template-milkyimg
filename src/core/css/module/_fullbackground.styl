.fullbg
	min-height: 100vh
	min-width: 100vw
	overflow: hidden
	position: fixed
	content: ""
	position: absolute
	left: 0
	right: 0
	top: 0
	bottom: 0
	background-size: cover
	background-position: top right
	// -webkit-filter: blur(5px) /* Or whatever filter you want */
	z-index: -1 /* Ensures it's behind the rest of the content */
