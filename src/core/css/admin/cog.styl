.warpinput.cog
	.listoptions
		background:$light-grey
		position: absolute
		top: -3px
		right:17px
		display:none
		width:140px
		padding:0px 15px
		z-index:-1
		border:3px solid #fff
		box-shadow: 0px 0px 5px #888888

		.level-1 &
			width:90px
			padding:8px 15px

		.warpinput
			display:inline-block
			margin-bottom:0

			input[type=radio]:checked ~ label
				top:3px

			&.color
				width:10px
				height:10px

				label
					width:5px
					height:5px
					padding:5px

					&.white
						background:#fff
					&.red
						background:#000666
					&.black
						background:#000000


	input[type=checkbox]:checked ~ .listoptions
		display:block