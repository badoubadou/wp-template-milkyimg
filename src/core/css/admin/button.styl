button:not(.toggle-burger)
	border-radius: 5px
	color: #ffffff
	padding: 5px 20px 5px 20px
	text-decoration: none
	border:none

	&.green
		background: $br-validate-primary

		&:hover
			background: $br-validate-secondary

	&.grey
		background: #626262

		&:hover
			background: #312E2E

	&.blue
		background: #0758BE

		&:hover
			background: #033F89

.round:not(.toggle-burger)
	border-radius:50%
	padding:10px
	height:40px
	width:40px

label
	&.icon-pencil
		background:#AD4707
		color: #ffffff
	&.icon-image,
	&.icon-images
		background:#AD077D
		color: #ffffff

	&.icon-enlarge
		background:#987654
		color: #ffffff


.warpinput
	height:40px
	width:40px
	display:block
	position:relative
	float:left
	margin-right: 10px

	label
		cursor:pointer
		position:relative
		top:10px

	input[type=radio],
	input[type=checkbox]
		position: fixed
		clip: rect(0, 0, 0, 0)

	input[type=radio]:checked ~ label,
	input[type=checkbox]:checked ~ label
		border:3px solid #fff
		margin-left:-3px

#savepage
	opacity: 0

	.savable &
		opacity: 1